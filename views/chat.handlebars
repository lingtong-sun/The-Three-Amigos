  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane active" id="chats">

   

      <table>
        {{#each messages}}
        <tr class="friend convo-link" href="/conversation/{{friend._id}}">
          <td class="pic" rowspan=2><img class="img-responsive img-circle" src="{{friend.image}}"/></td>
          <td>{{friend.name}}</td>
