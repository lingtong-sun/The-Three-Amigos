    <div class="tab-pane" id="settings">
      <div class="info">
        <h5> {{curr_user.name}} </h5>
        <img class="img-circle bigger-pic" src="{{curr_user.image}}"/>
      </div>

      <div style="display: none ;" id="save-notice" class="alert alert-warning fade in">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button> Changes saved!
      </div>


      <form id="settingform" class="form-horizontal" action="chat/changeSettings">
        <fieldset>

          <!-- Select Basic -->
          <div class="form-group">
            <label class="col-md-4 control-label" for="sendlang">Send Language (current: {{curr_user.send_language}})</label>
            <div class="col-md-6">
              <select id="sendlang" name="sendlang" class="form-control">
                <option value="en">English</option>
                <option value="es">Spanish</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="receivelang">Recieve Language (current: {{curr_user.receive_language}})</label>
            <div class="col-md-6">
              <select id="recievelang" name="recievelang" class="form-control">
                <option value="en">English</option>
                <option value="es">Spanish</option>
              </select>
            </div>
          </div>

          <!-- Button -->
          <div class="form-group">
            <label class="col-md-4 control-label" for="save"></label>
            <div class="col-md-4">
              <button id="save" name="save" class="btn btn-inverse">Save Changes</button>
            </div>
          </div>

          <!-- Button -->
          <div class="form-group">
            <label class="col-md-4 control-label" for="save"></label>
            <div class="col-md-4">
              <button id="save" name="save" class="btn btn-inverse" onclick = "logout()">Log Out</button>
            </div>
          </div>

        </fieldset>
      </form>

    </div>


    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
