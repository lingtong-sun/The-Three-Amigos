	  		window.onload = sendTime();

	  		function sendTime() {
	  			var elapsed = {{timeElapsed}};
	  			console.log("conversation.handlebars --> time to reach conversation page: " + elapsed);

	  			ga('send', 'event', 'Record Time To Reach Convo', 'click');

				ga('send', 'timing', 'jQuery', 'Time to Reach Convo', elapsed, 'Sample');	  		
			}
